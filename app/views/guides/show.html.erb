

<div class="new-box mx-auto">

  <% if current_user && current_user == @guide.user %>
    <%= link_to "Edit Your Guide", instructor_guide_path(@guide), class: 'btn btn-danger float-right' %>
  <% end %>

  <h1 class= "text-center"><%= @guide.title %></h1>

  <div class="row">

    <div class="col-sm-2 col-12">
      <h4><span class="badge badge-success"><%= number_to_currency @guide.cost %></span></h4>
    </div>

    <div class="col-sm-10 col-12">
      <h4><%= @guide.description %></h4>
    </div>

  </div>



</div>  
<div class="col-12 new-box mx-auto">
  <% @guide.sections.each do |section| %>
    <div class="section">
      <h3 class="text-center"><%= section.title %></h3>
      <% section.lessons.each do |lesson| %>
        <div class="lesson">
          <%= link_to lesson_path(lesson) do %>
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
          <% end %>  
        </div>
       
      <% end %>
    </div>
    <br />
  <% end %>
</div>